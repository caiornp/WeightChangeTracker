<?xml version="1.0" encoding="utf-8"?>
<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:layout_marginBottom="@android:dimen/notification_large_icon_height">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/diet_start_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/calendar_start_caption"
        android:layout_margin="@dimen/big_padding" />
    <CalendarView
        android:id="@+id/calendar_diet_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diet_start_title" />

    <TextView
        android:id="@+id/diet_end_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_diet_start_date"
        android:text="@string/calendar_end_caption"
        android:layout_margin="@dimen/big_padding" />

    <CalendarView
        android:id="@+id/calendar_diet_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diet_end_title" />

    <TextView
        android:id="@+id/min_change_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_diet_end_date"
        android:text="@string/min_change_caption"
        android:layout_margin="@dimen/big_padding" />

    <EditText
        android:id="@+id/min_change_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/min_rate_change"
        android:layout_below="@id/min_change_title"
        android:importantForAutofill="no"
        android:layout_margin="@dimen/big_padding"
        android:text="@string/default_min_rate_value"/>

    <TextView
        android:id="@+id/max_change_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/min_change_rate"
        android:text="@string/max_change_caption"
        android:layout_margin="@dimen/big_padding" />

    <EditText
        android:id="@+id/max_change_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/max_rate_change"
        android:layout_below="@id/max_change_title"
        android:importantForAutofill="no"
        android:layout_margin="@dimen/big_padding"
        android:text="@string/default_max_rate_value"
        />

    <Button
        android:id="@+id/button_save_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:background="@color/colorPrimary"
        android:text="@string/button_save"
        android:textColor="@color/buttonLabel"
        android:layout_marginTop="2dp"
        android:layout_below="@id/max_change_rate"
        android:layout_marginStart="32dp"
        />
</RelativeLayout>
</ScrollView>

